{
  "manifest_version": 2,

  "name": "Perma.cc",
  "description": "Enter any URL to preserve it forever.",
  "version": "0.1",
  "applications": {
    "gecko": {
      "id": "firefox@perma.cc"
      }
  },
  "permissions": [
    "activeTab"
  ],

  "icons": { "128": "infinity128.png" },
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },
  "browser_action": {
    "default_title": "Create Perma link",
    "default_icon": {"128": "infinity128.png"}
  }
}
